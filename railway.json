{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build -- --configuration=production"
    },
    "deploy": {
        "startCommand": "npx serve dist/car-rental-app/browser -p $PORT --single",
        "restartPolicyType": "ON_FAILURE"
    }
}